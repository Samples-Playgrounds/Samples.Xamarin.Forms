             x:Class="Xamarin.Forms.Labs.Sample.Pages.Controls.DragPage">
  <controls:DragContentView>
    <StackLayout>
      <StackLayout.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                  iOS="20,40,20,20"
                  Android="20,20,20,20"
