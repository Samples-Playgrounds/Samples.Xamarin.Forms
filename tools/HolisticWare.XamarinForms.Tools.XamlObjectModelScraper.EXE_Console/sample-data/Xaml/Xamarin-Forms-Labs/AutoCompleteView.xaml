<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.Forms.Labs.Controls.AutoCompleteView">
    <ContentView.Content>
         <StackLayout x:Name="stkBase" VerticalOptions="Start" >
          	<StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Orientation="Horizontal" >
		 		<Entry x:Name="entText" HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Entry>
		 		<Button x:Name="btnSearch" VerticalOptions="Center"  Text="Search"></Button>
		 	</StackLayout>
          	<ListView x:Name="lstSugestions" HeightRequest="250" HasUnevenRows="true"></ListView>
	   	 </StackLayout>
    </ContentView.Content>
</ContentView>

