<?xml version="1.0" encoding="UTF-8" ?>
<toolkit:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
				  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				  xmlns:toolkit="clr-namespace:XLabs.Forms.Mvvm;assembly=XLabs.Forms"
				  x:Class="XLabs.Sample.Pages.Services.GeolocatorPage"
				  Title="Geolocator">
	<StackLayout>
		<Button Text="Get Position" Command="{Binding GetPositionCommand}" />
		<Entry Text="{Binding PositionStatus}" />
		<Entry Text="{Binding PositionLatitude}" />
		<Entry Text="{Binding PositionLongitude}" />
		<Button Text="Send Position Email" Command="{Binding SendPositionEmail}" />
		<Button Text="Send Position SMS" Command="{Binding SendPositionSms}" />
		<Button Text="Open Position URI" Command="{Binding OpenPositionUri}" />
		<Button Text="Driving Directions" Command="{Binding GetDrivingDirections}" />
	</StackLayout>
</toolkit:BaseView>

