<?xml version="1.0" encoding="UTF-8" ?>
<toolkit:BaseView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.Forms.Labs.Sample.CacheServicePage"
    xmlns:toolkit="clr-namespace:Xamarin.Forms.Labs.Mvvm;assembly=Xamarin.Forms.Labs"
    Title="Cache Service"
    >
    <toolkit:BaseView.Content>
        <StackLayout>
          <Button Text="Clear cache" Command="{Binding ClearCacheCommand}"></Button>
          <Button Text="Save Items cache" Command="{Binding SaveItemsToCacheCacheCommand}"></Button>
          <Label Text="{Binding CacheInfo}"/>
          <ListView ItemsSource="{Binding Items}"></ListView>
        </StackLayout>
    </toolkit:BaseView.Content>
</toolkit:BaseView>

