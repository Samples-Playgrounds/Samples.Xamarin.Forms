<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TISensorBrowser.CharacteristicDetail_TISensor">
	<StackLayout>
		<StackLayout.Padding>10,10,10,10</StackLayout.Padding>
		<Label x:Name="InstructionsText" Text="Data from the sensor appears below. If no data is being shown, go back and use the 'On/Off' screen to enable sensor data collection." />
		<BoxView HeightRequest="3" WidthRequest="600" Color="Red" HorizontalOptions="CenterAndExpand" />

		<Label Text="Name" TextColor="Gray" />
		<Label x:Name="Name" Text="-" />

		<Label Text="ID" TextColor="Gray" />
		<Label x:Name="ID" Text="-" />

		<Label Text="Raw Value" TextColor="Gray" />
		<Label x:Name="RawValue" Text="-" />

		<Label Text="String Value" TextColor="Gray" />
		<Label x:Name="StringValue" Text="-" />

		<Label Text="Sensor Data" TextColor="Gray" />
		<Label x:Name="SensorValue" Text="~" />

		<AbsoluteLayout>
		<BoxView x:Name="Box1" BackgroundColor="Red"   WidthRequest="10" HeightRequest="10" />
		<BoxView x:Name="Box2" BackgroundColor="Green" WidthRequest="10" HeightRequest="10" />
		<BoxView x:Name="Box3" BackgroundColor="Blue"  WidthRequest="10" HeightRequest="10" />
		</AbsoluteLayout>
	</StackLayout>
</ContentPage>
