<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage BackgroundColor="#FFFF00"
    xmlns="http://xamarin.com/quickui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Tramchester.App.Views.TramstopsView"
    Title="Choose A Stop">
    <ContentPage.Content>
    	<ListView ItemSource="{Binding Tramstops}" ItemSelected="TramSelected">
    		<ListView.ItemTemplate>
    			<DataTemplate>
    				<TextCell Text="{Binding Name}"/>
    			</DataTemplate>
    		</ListView.ItemTemplate>
    	</ListView>
    </ContentPage.Content>
</ContentPage>