<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Images.Views.Xaml.PageImageOnDevice"
	>

	<ContentPage.Resources>
		<ResourceDictionary>
			<OnPlatform 
				x:Key="imageContact" 
				x:TypeArguments="ImageSource"
				iOS="mono_logo.png"
				Android="xamarin_authorized_partner_2x.png"
				WinPhone="Xamarin_logo_hexagon_blue_200x200.png"
				>
			</OnPlatform>
		</ResourceDictionary>
	</ContentPage.Resources>

	<ContentPage.Content>
		<StackLayout
			Orientation="Vertical"
			>

			<Image
				Source="{StaticResource imageContact}"
				HorizontalOptions="Center"
				VerticalOptions="Center" 
				>
			</Image>

			<Image 
				xmlns="http://xamarin.com/schemas/2014/forms"
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				>
				<Image.Source>
					<OnPlatform 
						x:TypeArguments="ImageSource"
						>
						<OnPlatform.iOS>
							<FileImageSource File="mono_logo.png"/>
						</OnPlatform.iOS>
						<OnPlatform.Android>
							<FileImageSource File="xamarin_authorized_partner_2x.png"/>
						</OnPlatform.Android>
						<OnPlatform.WinPhone>
							<FileImageSource File="Xamarin_logo_hexagon_blue_200x200.png"/>
						</OnPlatform.WinPhone>
					</OnPlatform>
				</Image.Source>
			</Image>

		</StackLayout>

	</ContentPage.Content>
</ContentPage>
