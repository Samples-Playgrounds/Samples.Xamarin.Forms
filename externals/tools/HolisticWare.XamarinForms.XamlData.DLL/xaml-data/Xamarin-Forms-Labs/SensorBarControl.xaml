<UserControl x:Class="XLabs.Forms.Controls.SensorBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="38">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource TransparentBrush}">
    	<Rectangle x:Name="NegativeRectangle" Fill="Red" HorizontalAlignment="Left" Height="38" Stroke="Black" VerticalAlignment="Top" Width="214"/>
    	<Rectangle x:Name="PositiveRectangle" Fill="Lime" HorizontalAlignment="Left" Height="38" Stroke="Black" VerticalAlignment="Top" Width="201" Margin="279,0,0,0"/>

    </Grid>
</UserControl>